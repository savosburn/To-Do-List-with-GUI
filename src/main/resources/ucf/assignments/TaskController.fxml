<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="466.0" prefWidth="440.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ucf.assignments.TaskController">
    <children>
        <TextField fx:id="taskDescriptionField" alignment="TOP_LEFT" layoutX="7.0" layoutY="179.0" onAction="#taskDescriptionFieldFilled" prefHeight="122.0" prefWidth="423.0" promptText="Enter Description...">
            <font>
                <Font size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
        <AnchorPane prefHeight="71.0" prefWidth="440.0" style="-fx-background-color: #F08080;">
            <children>
                <Button fx:id="returnToToDoListButton" layoutY="1.0" mnemonicParsing="false" onAction="#returnToToDoListButtonPressed" prefHeight="53.0" prefWidth="67.0" style="-fx-background-color: #F08080;" text="←" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="30.0" />
                    </font>
                    <cursor>
                        <Cursor fx:constant="HAND" />
                    </cursor>
                </Button>
                <Text fill="WHITE" layoutX="57.0" layoutY="48.0" strokeType="OUTSIDE" strokeWidth="0.0" text="New Task">
                    <font>
                        <Font name="System Bold" size="36.0" />
                    </font>
                </Text>
            </children>
        </AnchorPane>
        <Button fx:id="addItemButton" layoutX="162.0" layoutY="402.0" mnemonicParsing="false" onAction="#addItemButtonPressed" style="-fx-background-color: #F08080;" text="Add Task" textFill="WHITE">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
        <Text fill="INDIANRED" layoutX="8.0" layoutY="176.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Task Description" wrappingWidth="162.984375">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Text>
        <DatePicker fx:id="dueDateCalendarField" layoutX="8.0" layoutY="335.0" onAction="#dueDateCalendarFieldFilled" prefHeight="43.0" prefWidth="423.0" promptText="YYYY/MM/DD">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </DatePicker>
        <Text fill="INDIANRED" layoutX="6.0" layoutY="330.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Due Date">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Text>
        <Text fill="INDIANRED" layoutX="8.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Title">
            <font>
                <Font name="System Bold" size="15.0" />
            </font>
        </Text>
        <TextField fx:id="titleTextField" layoutX="7.0" layoutY="108.0" onAction="#titleTextFieldFilled" prefHeight="26.0" prefWidth="423.0" promptText="Enter Title...">
            <font>
                <Font size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="TEXT" />
            </cursor>
        </TextField>
    </children>
</AnchorPane>
